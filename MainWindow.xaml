<Window x:Class="Dns.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dns"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="5">
            <Button Name="btnSave" Content="Save data" Click="btnSave_Click"/>
            <Button Name="btnExit" Content="Exit" Margin="0 10 0 0"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Margin="0 0 0 5">
                <ContentControl Name="booksContent"/>
            </Border>

            <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1">
                <ContentControl Name="authorContent"/>
            </Border>
        </Grid>
    </Grid>
</Window>
